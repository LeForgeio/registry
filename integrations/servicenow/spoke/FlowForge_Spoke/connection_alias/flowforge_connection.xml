<?xml version="1.0" encoding="UTF-8"?>
<!--
    FlowForge Connection Alias
    ServiceNow Connection configuration for FlowForge API
-->
<unload>
    <sys_alias action="INSERT_OR_UPDATE">
        <active>true</active>
        <connection_type>http</connection_type>
        <description>Connection to FlowForge API services for AI, Formula, Crypto, and File operations.</description>
        <name>flowforge_connection</name>
        <sys_id>flowforge_connection_alias_001</sys_id>
        <type>connection</type>
        
        <!-- Configuration template - actual values set during installation -->
        <configuration>
            <endpoint>https://api.flowforge.io/api/v1</endpoint>
            <authentication_type>api_key</authentication_type>
            <api_key_header>X-API-Key</api_key_header>
            <timeout>120</timeout>
            <retry_policy>
                <max_retries>3</max_retries>
                <retry_interval>1000</retry_interval>
            </retry_policy>
        </configuration>
    </sys_alias>
</unload>
